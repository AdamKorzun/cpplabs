	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm3::NumberOfElsChange(TObject *Sender)
{
	try{
		StringGrid1->RowCount = StrToInt(NumberOfEls->Text);
		numberOfElements = StrToInt(NumberOfEls->Text);
	}
	catch(...){}
}
//---------------------------------------------------------------------------
void __fastcall TForm3::FormCreate(TObject *Sender)
{
    Memo1->Clear();
}
