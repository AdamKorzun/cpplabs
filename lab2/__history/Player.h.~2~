using namespace std;
class Player{
	private:
		UnicodeString name;
		UnicodeString club;
		UnicodeString role;
		int numberOfGoals;
		int penalties;
	public:
		Player();
		Player(string name, string club, string role, int numberOfGoals, int penalties);
		void SetName(UnicodeString);
		void SetClub(UnicodeString);
		void SetRole(UnicodeString);
		void SetNumberOfGoals(int);
		void SetPenalties(int);
		~Player(){}
};
